#include "ros/ros.h"
#include "rctestpkg/funMessage.h"
#include <string>
#include <sstream>


int main(int argc, char ** argv) {
	ros::init(argc, argv, "funTalker");
	ros::NodeHandle n;
	ros::Publisher pub = n.advertise<rctestpkg::funMessage>("funTalk", 1000);
	ros::Rate loop_rate(1);
	int count = 0;
	std::string messages[6];
	messages[0] = "popcorn";
	messages[1] = "toast";
	messages[2] = "gravy";
	messages[3] = "jam";
	messages[4] = "sausage";
	messages[5] = "egg";
	while (ros::ok()) {
		rctestpkg::funMessage msg;
		msg.msg = messages[count];
		ROS_INFO(msg.msg.c_str());
		count = (count + 1) % 6;
		ros::spinOnce();
		loop_rate.sleep();
	}
	return 0;
}
